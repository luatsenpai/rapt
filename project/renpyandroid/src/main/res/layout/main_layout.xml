<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
            android:layout_height="match_parent">

        <org.renpy.android.JoystickButton
                android:id="@+id/joystickBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:scaleType="fitCenter"
                android:layout_margin="10dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/joystick"/>
        <RelativeLayout
                android:id="@+id/joystickLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
            <LinearLayout
                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
            >
                <ImageButton
                        android:id="@+id/closeBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/close"
                        android:layout_marginEnd="10dp"
                        tools:ignore="ContentDescription"/>
                <ImageButton
                        android:id="@+id/rotateBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/rotation"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        tools:ignore="ContentDescription"/>
                <ImageButton
                        android:id="@+id/keyboardBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/keyboard"
                        android:layout_marginStart="10dp"
                        tools:ignore="ContentDescription"/>

            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/joystickArrowLay"
                    android:layout_width="148dp"
                    android:layout_height="148dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"
            >
                <ImageButton
                        android:id="@+id/upBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/arrow_up"
                        android:background="@drawable/circle_button"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        tools:ignore="ContentDescription"/>
                <ImageButton
                        android:id="@+id/downBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/arrow_down"
                        android:background="@drawable/circle_button"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        tools:ignore="ContentDescription"/>
                <ImageButton
                        android:id="@+id/leftBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/arrow_left"
                        android:background="@drawable/circle_button"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        tools:ignore="ContentDescription"/>
                <ImageButton
                        android:id="@+id/rightBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/arrow_right"
                        android:background="@drawable/circle_button"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        tools:ignore="ContentDescription"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/actionLay"
                    android:layout_width="120dp"
                    android:layout_height="128dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                >
                    <Button
                            android:id="@+id/aBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/round_button"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:text="Enter"
                            android:textSize="6sp"
                            android:textColor="@android:color/white"
                    />
                    <Button
                            android:id="@+id/bBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/round_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="Esc"
                            android:textSize="6sp"
                            android:textColor="@android:color/white"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                >
                    <Button
                            android:id="@+id/xBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/round_button"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:text="X"
                            android:textSize="6sp"
                            android:textColor="@android:color/white"
                    />
                    <Button
                            android:id="@+id/yBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/round_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="Y"
                            android:textSize="6sp"
                            android:textColor="@android:color/white"
                    />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
